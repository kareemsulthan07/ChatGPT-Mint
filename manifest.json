{
    "manifest_version": 3,
    "name": "ChatGPT-Mint",
    "version": "1.0",
    "description": "This chrome extension increases the code visibility in ChatGPT web site.",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "icons":{
        "16": "icons/chatgpt-mint 16x16.png",
        "48": "icons/chatgpt-mint 48x48.png",
        "128": "icons/chatgpt-mint 128x128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}